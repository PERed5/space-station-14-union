<DefaultWindow xmlns="https://spacestation14.io"
               Title="{Loc 'ert-computer-window-title'}"
               MinSize="900 600"
               SetSize="1000 700">

    <BoxContainer Orientation="Vertical"
                  VerticalExpand="True">

        <!-- ACTION BUTTON -->
        <BoxContainer Orientation="Horizontal"
                      HorizontalAlignment="Center"
                      Margin="5">
            <Button Name="StartEvacuationButton"
                    Access="Public"
                    MinWidth="250"
                    Text="{Loc 'ert-computer-evac-title'}"/>
            <Button Name="CancelEvacuationButton"
                    Access="Public"
                    MinWidth="250"
                    Text="{Loc 'ert-computer-evac-cancle-title'}"/>
        </BoxContainer>

    </BoxContainer>
</DefaultWindow>

