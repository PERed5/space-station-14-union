<DefaultWindow
    xmlns="https://spacestation14.io"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
    Title="{Loc 'skills-list-window-title'}"
    MinWidth="450"
    MinHeight="450"
    SetSize="520 550">
    <BoxContainer Orientation="Vertical" Margin="10" SeparationOverride="5">
        <PanelContainer StyleClasses="BackgroundDark" HorizontalExpand="True" Margin="0 0 0 10">
            <BoxContainer Orientation="Vertical" Margin="8">
                <Label Name="TargetNameLabel" Access="Public" HorizontalAlignment="Center" StyleClasses="LabelHeading"/>
            </BoxContainer>
        </PanelContainer>
        <ScrollContainer VerticalExpand="True" HorizontalExpand="True">
            <BoxContainer Name="SkillsContainer" Access="Public" Orientation="Vertical" SeparationOverride="8"/>
        </ScrollContainer>
    </BoxContainer>
</DefaultWindow>
